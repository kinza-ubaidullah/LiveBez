# ===========================================
# LIVE SCORE & PREDICTION SPORTS PLATFORM
# Environment Variables Configuration
# ===========================================

# Database (MongoDB)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/sports-platform?retryWrites=true&w=majority"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:4005"

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Public URLs
NEXT_PUBLIC_BASE_URL="http://localhost:4005"

# Rate Limiting - Upstash Redis (Optional)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# Sports API (Optional - for real data)
SPORTS_API_KEY="your-sports-api-key"
